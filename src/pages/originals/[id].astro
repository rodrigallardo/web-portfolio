---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { useTranslations, getLangFromUrl } from '../../i18n';

export async function getStaticPaths() {
  const originals = await getCollection('originals');
  return originals.map((artwork) => ({
    params: { id: artwork.id },
    props: { artwork },
  }));
}

const { artwork } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const baseUrl = '/web-portfolio';

// Get language-specific content
const title = artwork.data.titleEs;
const description = artwork.data.descriptionEs;

// WhatsApp configuration
const phoneNumber = '1234567890';
const message = `Hola, estoy interesado en la obra "${title}". Me gustaría obtener más información.`;
const whatsappUrl = `https://wa.me/${phoneNumber}?text=${encodeURIComponent(message)}`;

// Price inquiry message (when price is not listed)
const priceInquiryMessage = `Hola, me gustaría conocer el precio de la obra "${title}".`;
const priceInquiryUrl = `https://wa.me/${phoneNumber}?text=${encodeURIComponent(priceInquiryMessage)}`;

// Determine orientation from dimensions (format: "width x height")
const [width, height] = artwork.data.dimensionsCm.split('x').map(d => parseInt(d.trim()));
const isLandscape = width > height;
