    {isLandscape ? (
      <!-- Landscape layout: full-width image with info below -->
      <div class="space-y-8">
        <div>
          <img
            src={artwork.data.image}
            alt={title}
            class="w-full h-auto"
          />
        </div>

        <div class="space-y-6 max-w-3xl">
        <div>
