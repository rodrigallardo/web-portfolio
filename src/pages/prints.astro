---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { useTranslations, getLangFromUrl } from '../i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const prints = await getCollection('prints');
const baseUrl = '/web-portfolio';
---

<Layout title={`${t('nav.prints')} - Artist Portfolio`}>
  <div class="space-y-0">
    <div class="text-center pt-12 pb-4">
      <h1 class="text-5xl font-bold text-gray-900 mb-4">{t('nav.prints')}</h1>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        {lang === 'es'
          ? 'Descubre impresiones de alta calidad de obras originales.'
          : 'Discover high-quality prints of original artworks.'}
      </p>
    </div>

    {prints.map((artwork) => (
      <a
        href={`${baseUrl}/prints/${artwork.id}`}
        class="block min-h-[50vh] md:min-h-[60vh] flex items-center justify-center p-4 md:p-6 hover:bg-gray-50 transition-colors"
      >
        <div class="max-w-3xl w-full">
          <img
            src={artwork.data.image}
            alt={artwork.data.titleEs}
            class="w-full h-auto max-h-[60vh] object-contain mb-4"
          />
          <div class="text-center space-y-2">
            <h2 class="text-xl md:text-3xl font-bold text-gray-900">
              {artwork.data.titleEs}
            </h2>
            <div class="flex justify-center items-center gap-4 text-gray-600">
              {artwork.data.price && <span class="text-lg font-semibold">{artwork.data.price}</span>}
              <span class:list={[
                "px-3 py-1 text-sm font-medium",
                artwork.data.available
                  ? "bg-green-100 text-green-800"
                  : "bg-gray-100 text-gray-800"
              ]}>
                {artwork.data.available ? t('common.available') : t('common.sold')}
              </span>
            </div>
          </div>
        </div>
      </a>
    ))}
  </div>
</Layout>
