---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { useTranslations } from '../../i18n';

const t = useTranslations('en');
const originals = await getCollection('originals');
const baseUrl = '/web-portfolio/en';
---

<Layout title={`${t('nav.originals')} - Artist Portfolio`}>
  <div class="space-y-8">
    <div class="text-center">
      <h1 class="text-5xl font-bold text-gray-900 mb-4">{t('nav.originals')}</h1>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Explore the collection of original artworks.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mt-12">
      {originals.map((artwork) => (
        <a
          href={`${baseUrl}/originals/${artwork.id}`}
          class="group block bg-white rounded-lg overflow-hidden shadow-sm hover:shadow-xl transition-shadow duration-300"
        >
          <div class="aspect-square bg-gray-200 overflow-hidden">
            <img
              src={artwork.data.image}
              alt={artwork.data.titleEn}
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
            />
          </div>
          <div class="p-6">
            <h2 class="text-2xl font-semibold text-gray-900 mb-2">
              {artwork.data.titleEn}
            </h2>
            <div class="flex justify-between items-center text-sm text-gray-600">
              <span>{artwork.data.price || ''}</span>
              <span class:list={[
                "px-2 py-1 rounded text-xs font-medium",
                artwork.data.available
                  ? "bg-green-100 text-green-800"
                  : "bg-gray-100 text-gray-800"
              ]}>
                {artwork.data.available ? t('common.available') : t('common.sold')}
              </span>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</Layout>
