---
import Layout from '../../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { useTranslations } from '../../../i18n';

export async function getStaticPaths() {
  const prints = await getCollection('prints');
  return prints.map((artwork) => ({
    params: { id: artwork.id },
    props: { artwork },
  }));
}

const { artwork } = Astro.props;
const t = useTranslations('en');
const baseUrl = '/web-portfolio/en';

// Get language-specific content
const title = artwork.data.titleEn;
const description = artwork.data.descriptionEn;

// Convert dimensions from cm to inches
const [widthCm, heightCm] = artwork.data.dimensionsCm.split(' x ').map(d => parseFloat(d.trim()));
const widthInches = (widthCm / 2.54).toFixed(1);
const heightInches = (heightCm / 2.54).toFixed(1);
const dimensionsInches = `${widthInches} x ${heightInches} inches`;

// WhatsApp configuration
const phoneNumber = '1234567890';
const message = `Hello, I'm interested in the artwork "${title}". I would like to get more information.`;
const whatsappUrl = `https://wa.me/${phoneNumber}?text=${encodeURIComponent(message)}`;

// Price inquiry message (when price is not listed)
const priceInquiryMessage = `Hello, I would like to know the price of the artwork "${title}".`;
const priceInquiryUrl = `https://wa.me/${phoneNumber}?text=${encodeURIComponent(priceInquiryMessage)}`;
---

<Layout title={`${title} - Artist Portfolio`} artworkTitle={title}>
  <div data-artwork-id={artwork.id} data-artwork-title={title} class="max-w-5xl mx-auto">
    <a
      href={`${baseUrl}/prints`}
      class="inline-flex items-center text-gray-600 hover:text-gray-900 mb-8"
    >
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Back to Prints
    </a>

    <div class="grid md:grid-cols-2 gap-12">
      <div class="bg-gray-100 rounded-lg overflow-hidden">
        <img
          src={artwork.data.image}
          alt={title}
          class="w-full h-auto"
        />
      </div>

      <div class="space-y-6">
        <div>
          <h1 class="text-4xl font-bold text-gray-900 mb-2">{title}</h1>
          {artwork.data.price ? (
            <p class="text-3xl font-semibold text-gray-900">{artwork.data.price}</p>
          ) : (
            <a
              href={priceInquiryUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-900 font-medium rounded-lg transition-colors duration-200"
            >
              <svg
                class="w-5 h-5 mr-2"
                fill="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
