---
import '../styles/global.css';
import Navigation from '../components/Navigation.astro';
import WhatsAppButton from '../components/WhatsAppButton.astro';
import Analytics from '../components/Analytics.astro';
import LanguageDetector from '../components/LanguageDetector.astro';
import { getLangFromUrl } from '../i18n';

interface Props {
	title?: string;
	artworkTitle?: string;
}

const { title = 'Artist Portfolio', artworkTitle } = Astro.props;
const lang = getLangFromUrl(Astro.url);
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/web-portfolio/favicon.svg" />
		<link rel="icon" href="/web-portfolio/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300;400;500;600;700&display=swap" rel="stylesheet">
		<Analytics />
		<LanguageDetector />
	</head>
	<body class="min-h-screen bg-gray-50 text-gray-900">
		<Navigation />
		<main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
			<slot />
		</main>
		<footer class="border-t border-gray-200 mt-20">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 text-center text-sm text-gray-500">
				<p>&copy; {new Date().getFullYear()} Artist Portfolio. All rights reserved.</p>
			</div>
		</footer>
		<WhatsAppButton artworkTitle={artworkTitle} />
	</body>
</html>

<style is:global>
	body {
		font-family: 'Cormorant Garamond', serif;
		font-weight: 500;
		font-size: 1.25rem;
		letter-spacing: 0.01em;
	}

	h1, h2, h3, h4, h5, h6 {
		font-family: 'Cormorant Garamond', serif;
		font-weight: 700;
		letter-spacing: 0.02em;
	}
</style>

<script>
	// Disable right-click to protect artwork images
	document.addEventListener('contextmenu', (event) => {
		event.preventDefault();
		return false;
	});
</script>
