---
import { getLangFromUrl, useTranslations, languages } from '../i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const currentPath = Astro.url.pathname;
const baseUrl = lang === 'es' ? '/web-portfolio' : '/web-portfolio/en';
---

<nav class="bg-gray-50/80 backdrop-blur-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-12 sm:h-14">
      <div class="flex space-x-6 sm:space-x-10">
        <a
          href={`${baseUrl}/`}
          class:list={[
            "inline-flex items-center text-xs sm:text-sm uppercase tracking-wider font-light transition-colors",
            currentPath === `${baseUrl}/` || currentPath === `${baseUrl}`
              ? "text-gray-900"
              : "text-gray-400 hover:text-gray-700"
          ]}
        >
          {t('nav.originals')}
        </a>
        <a
          href={`${baseUrl}/prints`}
          class:list={[
            "inline-flex items-center text-xs sm:text-sm uppercase tracking-wider font-light transition-colors",
            currentPath.includes('/prints')
              ? "text-gray-900"
              : "text-gray-400 hover:text-gray-700"
          ]}
        >
          {t('nav.prints')}
        </a>
        <a
          href={`${baseUrl}/about`}
          class:list={[
            "inline-flex items-center text-xs sm:text-sm uppercase tracking-wider font-light transition-colors",
            currentPath.includes('/about')
              ? "text-gray-900"
              : "text-gray-400 hover:text-gray-700"
          ]}
        >
          {t('nav.about')}
        </a>
      </div>

      <div class="flex items-center space-x-1">
        <a
          href={currentPath.replace('/web-portfolio/en', '/web-portfolio')}
          data-lang-switch="es"
          class:list={[
            "px-2 py-1 text-xs sm:text-sm font-light uppercase tracking-wide transition-colors",
            lang === 'es'
              ? "text-gray-900"
              : "text-gray-400 hover:text-gray-700"
          ]}
        >
          ES
        </a>
        <span class="text-gray-300 text-xs">|</span>
        <a
          href={currentPath.includes('/en')
            ? currentPath
            : currentPath.replace('/web-portfolio', '/web-portfolio/en')
          }
          data-lang-switch="en"
          class:list={[
            "px-2 py-1 text-xs sm:text-sm font-light uppercase tracking-wide transition-colors",
            lang === 'en'
              ? "text-gray-900"
              : "text-gray-400 hover:text-gray-700"
          ]}
        >
          EN
        </a>
      </div>
    </div>
  </div>
</nav>
