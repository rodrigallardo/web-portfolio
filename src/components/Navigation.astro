---
import { getLangFromUrl, useTranslations, languages } from '../i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const currentPath = Astro.url.pathname;
const baseUrl = lang === 'es' ? '/web-portfolio' : '/web-portfolio/en';
---

<nav class="border-b border-gray-200 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <div class="flex space-x-8">
        <a
          href={`${baseUrl}/`}
          class:list={[
            "inline-flex items-center px-1 pt-1 border-b-2 text-base font-medium",
            currentPath === `${baseUrl}/` || currentPath === `${baseUrl}`
              ? "border-gray-900 text-gray-900"
              : "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700"
          ]}
        >
          {t('nav.originals')}
        </a>
        <a
          href={`${baseUrl}/prints`}
          class:list={[
            "inline-flex items-center px-1 pt-1 border-b-2 text-base font-medium",
            currentPath.includes('/prints')
              ? "border-gray-900 text-gray-900"
              : "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700"
          ]}
        >
          {t('nav.prints')}
        </a>
        <a
          href={`${baseUrl}/about`}
          class:list={[
            "inline-flex items-center px-1 pt-1 border-b-2 text-base font-medium",
            currentPath.includes('/about')
              ? "border-gray-900 text-gray-900"
              : "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700"
          ]}
        >
          {t('nav.about')}
        </a>
      </div>

      <div class="flex items-center space-x-2">
        <a
          href={currentPath.replace('/web-portfolio/en', '/web-portfolio')}
          data-lang-switch="es"
          class:list={[
            "px-3 py-2 rounded-md text-base font-medium",
            lang === 'es'
              ? "bg-gray-900 text-white"
              : "text-gray-500 hover:text-gray-700"
          ]}
        >
          ES
        </a>
        <a
          href={currentPath.includes('/en')
            ? currentPath
            : currentPath.replace('/web-portfolio', '/web-portfolio/en')
          }
          data-lang-switch="en"
          class:list={[
            "px-3 py-2 rounded-md text-base font-medium",
            lang === 'en'
              ? "bg-gray-900 text-white"
              : "text-gray-500 hover:text-gray-700"
          ]}
        >
          EN
        </a>
      </div>
    </div>
  </div>
</nav>
